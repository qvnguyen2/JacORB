<?xml version="1.0"?>

<project name="security-ibm" default="all" basedir="../../../../..">

  <!-- ==================================================== -->
  <!--             security build file                         -->
  <!-- $Id$ -->
  <!-- ==================================================== -->

   <import file="../../../../../etc/common.xml"/>

   <target name="all" depends="init,ssl,sas"/>

   <target name="local-patches"  if="vendor-is-ibm">
       <replace
            dir="${src}/org/jacorb/security/ibm"
           includes="**/*.java"
           value="com.ibm.security" summary="=true"
           token="sun.security"/>

       <replace
            dir="${src}/org/jacorb/security/ibm"
           includes="**/*.java"
           value="com.ibm" summary="=true"
           token="com.sun"/>

   </target>

   <target name="ssl"  if="vendor-is-ibm">
           <ant antfile="${src}/org/jacorb/security/ibm/ssl/build.xml" dir="${basedir}"/>
   </target>

   <target name="sas" if="vendor-is-ibm">
           <ant antfile="${src}/org/jacorb/security/ibm/sas/build.xml" dir="${basedir}"/>
   </target>
</project>
