<?xml version="1.0"?>

<project name="JacORB hello demo" default="demo" basedir=".">

    <import file="../common/common-demo.xml" />

    <target name="demo" depends="demo-norm,demo-tiny" />

    <target name="demo-norm" depends="compile" unless="tiny-system-arch" >
        <run-demo>
            <run-server>
                <run-default-server classname="demo.hello.Server" />
            </run-server>

            <run-client>
                <run-default-client classname="demo.hello.Client" />
            </run-client>
        </run-demo>
    </target>

    <target name="demo-tiny" if="tiny-system-arch" >
        <run-demo-tiny server="demo.hello.Server" client="demo.hello.Client" />
    </target>

</project>
